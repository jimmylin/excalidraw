{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "auto",
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "pinDigests": false
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchManagers": [
        "custom.regex"
      ],
      "matchUpdateTypes": [
        "digest"
      ],
      "fileMatch": [
        "deployment\\.yaml$"
      ],
      "enabled": true,
      "automerge": true
    }
  ]
}
