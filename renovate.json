{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["values.yaml"],
      "matchStrings": [
        "tag:\\s*\"?(?<currentValue>sha-[a-f0-9]+)\"?"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "excalidraw/excalidraw",
      "versioning": "regex",
      "extractVersion": "^sha-(?<version>[a-f0-9]+)$"
    }
  ]
}
